---
import Html5Icon from '../icons/html5Icon.astro';
import BootstrapIcon from '../icons/bootstrapIcon.astro';
import JavaIcon from '../icons/javaIcon.astro';
import MysqlIcon from '../icons/mysqlIcon.astro';
import ReactIcon from '../icons/reactIcon.astro';
import JavascriptIcon from '../icons/javascriptIcon.astro';
import LinkIcon from '../icons/linkIcon.astro';
import LinkedinIcon from '../icons/linkedinIcon.astro';
import GithubIcon from '../icons/githubIcon.astro';

const TAGS = {
    html: {
        name: 'HTML',
        class: 'flex items-center justify-center bg-orange-400 text-white text-sm font-semibold gap-1 rounded-full border-2 border-orange-900 px-2',
        icon: Html5Icon
    },
    bootstrap: {
        name: 'Bootstrap CSS',
        class: 'flex items-center justify-center bg-purple-300 text-purple-600 text-sm font-semibold gap-1 rounded-full border-2 border-purple-700 px-2',
        icon: BootstrapIcon
    },
    java: {
        name: 'Java',
        class: 'flex items-center justify-center bg-black text-orange-700 font-semibold text-sm gap-1 rounded-full border-2 border-orange-950 px-2',
        icon: JavaIcon
    },
    mysql: {
        name: 'MySql',
        class: 'flex items-center justify-center bg-white/80 text-orange-700 font-semibold text-sm gap-1 rounded-full border-2 border-blue-400 px-2',
        icon: MysqlIcon
    },
    react: {
        name: 'React',
        class: 'flex items-center justify-center bg-[#2f2f2f] text-sky-400 font-semibold text-sm gap-1 rounded-full border-2 border-blue-900 px-2',
        icon: ReactIcon
    },
    javascript: {
        name: 'JavaScript',
        class: 'flex items-center justify-center bg-[#dbc854] text-black font-semibold text-sm gap-1 rounded-full border-2 border-yellow-100 px-2',
        icon: JavascriptIcon
    }
}


const PROJECTS = [
    {
        image: 'img/tripBalancePic.webp',
        title: 'TripBalance',
        description: 'Diseñado completamente por mí, fue un proyecto con fines educativos el cual desarrolle para la clase Programación para la Web.',
        link: 'Soon...',
        github: 'Soon...',
        tags: [TAGS.react, TAGS.html, TAGS.javascript, TAGS.bootstrap]
    },
    {
        image: 'img/freeCodeBarberPic.webp',
        title: 'Free Code Barber',
        description: 'Este proyecto fue diseñado entre otra persona y yo, fue desarrollado completamente por mí, con fines educativos el cual desarrolle para la Bases de Datos.',
        link: 'Soon...',
        github: 'Soon...',
        tags: [TAGS.java, TAGS.mysql]
    }
]

---

{
    PROJECTS.map(({ image, title, tags, description, link, github }) => (
        <article class="flex flex-col-reverse md:flex-row gap-7 mb-16">

            <figure class="w-[360px] sm:w-[520px] md:w-[360px]">
                <img class="rounded shadow-2xl shadow-white/10" 
                    src={image} 
                    alt=`Cara del proyecto. ${image}`
                >
            </figure>

            <section class="w-[360px] sm:w-[520px] md:w-[360px]">
                <h3 class="text-2xl text-yellow-100 font-bold mb-3">
                    {title}
                </h3>

                <ul class="flex gap-2 flex-wrap mb-3">
                    {tags.map(tag => (
                        <li>
                            <span class={tag.class}>
                                {tag.name}
                                <tag.icon class="size-4"/>
                            </span>
                        </li>
                    ))}
                </ul>

                <p class="text-xl text-white/95 text-pretty mb-3">
                    {description}
                </p>

                <div class="w-80 flex gap-4">
                    <p class="rounded-xl border border-white/10 flex justify-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:bg-white/30 transition text-white hover:cursor-pointer">
                        {link} <LinkIcon/>
                    </p>

                    <p class="rounded-xl border border-white/10 flex justify-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:bg-white/30 transition text-white hover:cursor-pointer">
                        {github} <GithubIcon class="size-6"/>
                    </p>
                </div>

            </section>
        </article>
    ))
}